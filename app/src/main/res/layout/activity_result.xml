<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/info"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="108dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08"
        app:srcCompat="@drawable/psg_name" />

    <LinearLayout
        android:id="@+id/imageBorder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="125dp"
        android:background="@drawable/round_backgroud_border_black"
        android:gravity="center"
        android:padding="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/result_image"
            android:layout_width="209dp"
            android:layout_height="184dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.14" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="300dp"
        android:layout_height="280dp"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageBorder">

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#dcdcdc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="#dcdcdc"
                android:fontFamily="@font/nanumsquareeb"
                android:gravity="center"
                android:text="알약 이름"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/pill_name"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:fontFamily="@font/nanumsquare_acr"
                android:gravity="center"
                android:text="TextView"
                android:textSize="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/result_image"
                app:layout_constraintVertical_bias="0.05" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#dcdcdc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="#dcdcdc"
                android:fontFamily="@font/nanumsquareeb"
                android:gravity="center"
                android:text="알약 제조회사"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/company"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:fontFamily="@font/nanumsquare_acr"
                android:gravity="center"
                android:text="TextView"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pill_name" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#dcdcdc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="#dcdcdc"
                android:fontFamily="@font/nanumsquareeb"
                android:gravity="center"
                android:text="알약 코드"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/code"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:fontFamily="@font/nanumsquare_acr"
                android:gravity="center"
                android:text="TextView"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/company" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#dcdcdc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="#dcdcdc"
                android:fontFamily="@font/nanumsquareeb"
                android:gravity="center"
                android:text="알약 정보"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/pill_info"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:fontFamily="@font/nanumsquare_acr"
                android:gravity="center"
                android:text="TextView"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/code" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#dcdcdc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="#dcdcdc"
                android:fontFamily="@font/nanumsquareeb"
                android:gravity="center"
                android:text="복용 시 주의사항"
                android:textSize="12sp" />

            <!--            <TextView-->
            <!--                android:id="@+id/tag1"-->
            <!--                android:layout_width="200dp"-->
            <!--                android:layout_height="45dp"-->
            <!--                android:layout_gravity="center"-->
            <!--                android:gravity="center"-->
            <!--                android:text="TextView"-->
            <!--                android:textSize="10dp"-->
            <!--                android:fontFamily="@font/nanumsquare_acr"-->
            <!--                app:layout_constraintEnd_toEndOf="parent"-->
            <!--                app:layout_constraintHorizontal_bias="0.494"-->
            <!--                app:layout_constraintStart_toStartOf="parent"-->
            <!--                app:layout_constraintTop_toBottomOf="@+id/pill_info" />-->

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#dcdcdc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="#dcdcdc"
                android:fontFamily="@font/nanumsquareeb"
                android:gravity="center"
                android:text="금기 정보"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/danger_info"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:fontFamily="@font/nanumsquare_acr"
                android:gravity="center"
                android:text="TextView"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.576"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tag1" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:background="#dcdcdc" />

    </LinearLayout>

    <Button
        android:id="@+id/addData_btn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="데이터 추가"
        android:textColor="#FFFFFF"
        android:background="#4999dd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:fontFamily="@font/nanumsquareeb"/>


</androidx.constraintlayout.widget.ConstraintLayout>